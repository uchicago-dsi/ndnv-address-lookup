{
  "version": 8,

  "name": "north-dakota-street-address-lookup",
  "id": "north-dakota-street-address-lookup",
  "metadata": {},

  "sources": {
    "usgs": {
      "type": "raster",
      "tiles": [
        "https://basemap.nationalmap.gov/arcgis/rest/services/USGSImageryOnly/MapServer/tile/{z}/{y}/{x}"
      ],
      "tileSize": 256,
      "maxzoom": 16,
      "attribution": "<a href='https://usgs.gov/'>U.S. Geological Survey</a>"
    },
    "openmaptiles": {
      "type": "vector",
      "tiles": [
        "https://d17gef4m69t9r4.cloudfront.net/planet/{z}/{x}/{y}.mvt"
      ],
      "maxzoom": 14,
      "attribution": "<a href='https://www.openmaptiles.org/'>OpenMapTiles</a>, <a href='https://www.openstreetmap.org/copyright/'>OpenStreetMap contributors</a>"
    }
  },

  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#5f6c4c"
      }
    },
    {
      "id": "counties",
      "type": "line",
      "source": "counties",
      "paint": {
        "line-color": "hsl(122, 100%, 56%)",
        "line-width": 2
      }
    },
    {
      "id": "reservations",
      "type": "line",
      "source": "reservations",
      "paint": {
        "line-color": "hsl(60, 100%, 50%)",
        "line-width": 2
      }
    },
    {
      "id": "counties-names",
      "type": "symbol",
      "source": "counties",
      "maxzoom": 9,
      "layout": {
        "text-font": ["Noto Sans Regular"],
        "text-size": {
          "base": 1.2,
          "stops": [[7, 14], [11, 24]]
        },
        "text-field": "{name}",
        "text-max-width": 8,
        "visibility": "visible"
      },
      "paint": {
        "text-color": "hsl(122, 100%, 56%)"
      }
    },
    {
      "id": "reservation-names",
      "type": "symbol",
      "source": "reservations",
      "maxzoom": 9,
      "layout": {
        "text-font": ["Noto Sans Regular"],
        "text-size": {
          "base": 1.2,
          "stops": [[7, 14], [11, 24]]
        },
        "text-field": "{name}",
        "text-max-width": 8,
        "visibility": "visible"
      },
      "paint": {
        "text-color": "hsl(60, 100%, 50%)"
      }
    }

  ]
}
